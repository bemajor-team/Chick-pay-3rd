pipeline {
    agent any

    environment {
        AWS_DEFAULT_REGION = 'ap-northeast-2'
        ECR_REPO = '297195401389.dkr.ecr.ap-northeast-2.amazonaws.com/zapp/react-app'
        IMAGE_TAG = "${env.BUILD_NUMBER}"
        SERVICE_DIR = "front-service/react-app"
        BASE_BRANCH = "origin/terraform"
    }

    stages {
        stage('Check Changes in react-app') {
            steps {
                script {
                    sh "git fetch origin terraform"
                    def changes = sh(
                        script: "git diff --name-only ${BASE_BRANCH} HEAD | grep '^${SERVICE_DIR}/' || true",
                        returnStdout: true
                    ).trim()
                    if (!changes) {
                        echo "🚫 변경 없음. 빌드 종료"
                        // 파이프라인 즉시 종료 (이후 stage 생략)
                        currentBuild.result = 'SUCCESS'
                        return
                    } else {
                        echo "✅ 변경 감지됨:\n${changes}"
                    }
                }
            }
        }

        stage('Docker Build & Push') {
            steps {
                dir("${SERVICE_DIR}") {
                    script {
                        sh """
                        echo "🛠 Docker Build 시작"
                        aws ecr get-login-password --region $AWS_DEFAULT_REGION | docker login --username AWS --password-stdin $ECR_REPO
                        docker build -t $ECR_REPO:$IMAGE_TAG .
                        docker push $ECR_REPO:$IMAGE_TAG
                        """
                    }
                }
            }
        }
    }
}
