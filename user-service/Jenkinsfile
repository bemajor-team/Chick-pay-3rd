pipeline {
    agent any

    environment {
        AWS_DEFAULT_REGION = 'ap-northeast-2'
        ECR_REPO = '297195401389.dkr.ecr.ap-northeast-2.amazonaws.com/zapp/user-service'
        IMAGE_TAG = "${env.BUILD_NUMBER}"
        ARGOCD_AUTH_TOKEN = credentials('ARGOCD_AUTH_TOKEN')  // JenkinsÏóê Îì±Î°ùÌïú ÌÜ†ÌÅ∞ ID
    }

    stages {
        stage('Docker Build & Push') {
            steps {
                dir('user-service') {
                    script {
                        sh """
                        echo "üõ† Docker Build ÏãúÏûë"
                        aws ecr get-login-password --region $AWS_DEFAULT_REGION | docker login --username AWS --password-stdin $ECR_REPO

                        docker build -t $ECR_REPO:$IMAGE_TAG .

                        echo "üì§ ECR Push"
                        docker push $ECR_REPO:$IMAGE_TAG
                        """
                    }
                }
            }
        }

        stage('Trigger Argo CD Sync') {
            steps {
                script {
                    sh """
                    echo "üöÄ Argo CD Î∞∞Ìè¨ Ìä∏Î¶¨Í±∞"
                    curl -k -H "Authorization: Bearer $ARGOCD_AUTH_TOKEN" \\
                      -X POST https://argocd.chick-pay.com/api/v1/applications/user-service/sync
                    """
                }
            }
        }
    }
}
